<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
namespace:命名空间规则，具有唯一性。可以自己命名，但建议与Dao接口的全限定类名一致
-->
<mapper namespace="com.cshbxy.mapper.UserMapper">
    <select id="selectAll" resultType="com.cshbxy.pojo.User">
        select * from users
    </select>
    <select id="selectById" parameterType="int" resultType="com.cshbxy.pojo.User">
        select *
        from users
        where uid = #{uid}
    </select>
</mapper>